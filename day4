// Genera un número aleatorio entre 0 y 10 (inclusive)
// Math.random() genera un número entre 0 y 0.99...
// Multiplicar por 11 da un rango de 0 a 10.99...
// Math.floor() redondea hacia abajo al entero más cercano
const numeroSecreto = Math.floor(Math.random() * 11);

alert("¡Bienvenido al juego de adivinar el número!");

// Bucle para 3 intentos
for (let intento = 1; intento <= 3; intento++) {
  const adivinanza = prompt(`Adivina el número entre 0 y 10. (Intento ${intento} de 3)`);
  
  const numeroAdivinado = parseInt(adivinanza);

  if (numeroAdivinado === numeroSecreto) {
    alert("¡Felicidades! ¡Has adivinado el número!");
    break;
  } else {
    if (intento === 3) {
      alert(`¡Qué pena! No lo lograste. El número era el ${numeroSecreto}.`);
    } else {
      alert("Incorrecto. ¡Inténtalo de nuevo!");
    }
  }
}
